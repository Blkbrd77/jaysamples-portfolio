---
export const prerender = false; // Server-render to fetch fresh data from Supabase

import Layout from '../layouts/Layout.astro';
import { getStats, getPhases, getBadges, getWeeks } from '../lib/supabase';

// Fetch data from Supabase
const dbStats = await getStats();
const dbPhases = await getPhases();
const dbBadges = await getBadges();
const dbWeeks = await getWeeks();

// Fallback stats if DB not connected
const stats = {
  totalWeeks: 13,
  totalHours: 45,
  dailyCommitment: "30 min",
  currentStreak: dbStats?.current_streak ?? 0,
  totalPoints: dbStats?.total_points ?? 0,
  overallProgress: dbStats?.overall_progress ?? 0
};

// Weekly plan data (static - this is the plan, not progress)
const weeklyPlan = [
  { week: 1, dates: "Jan 1-5", focus: "Introduction to Machine Learning", modules: "Videos 1-10, Quiz 1", topics: ["What is ML?", "Supervised vs Unsupervised", "Regression Model"], hours: 2.5, phase: 1 },
  { week: 2, dates: "Jan 6-12", focus: "Linear Regression Deep Dive", modules: "Videos 11-20, Labs 1-3", topics: ["Cost Function", "Gradient Descent", "Multiple Features"], hours: 3.5, phase: 1 },
  { week: 3, dates: "Jan 13-19", focus: "Feature Engineering & Practice", modules: "Labs 4-5, Assignment 1", topics: ["Feature Scaling", "Learning Rate", "Polynomial Regression"], hours: 3.5, phase: 1 },
  { week: 4, dates: "Jan 20-26", focus: "Classification & Logistic Regression", modules: "Week 3 Videos, Labs 1-3", topics: ["Binary Classification", "Sigmoid Function", "Decision Boundary"], hours: 3.5, phase: 1 },
  { week: 5, dates: "Jan 27 - Feb 2", focus: "Course 1 Completion", modules: "Final Labs, Assignment 2", topics: ["Overfitting", "Regularization", "Course Review"], hours: 3.5, phase: 1 },
  { week: 6, dates: "Feb 3-9", focus: "Cost Overrun Regression", modules: "Notebook 1", topics: ["Data Loading", "EDA", "Linear Regression"], hours: 3.5, phase: 2 },
  { week: 7, dates: "Feb 10-16", focus: "Risk Classification", modules: "Notebook 2", topics: ["Logistic Regression", "Multi-class", "Metrics"], hours: 3.5, phase: 2 },
  { week: 8, dates: "Feb 17-23", focus: "Performance Clustering", modules: "Notebook 3", topics: ["K-Means", "Elbow Method", "Silhouette"], hours: 3.5, phase: 2 },
  { week: 9, dates: "Feb 24 - Mar 2", focus: "Ensemble Comparison", modules: "Notebook 4", topics: ["Random Forest", "Gradient Boosting", "Comparison"], hours: 3.5, phase: 2 },
  { week: 10, dates: "Mar 3-9", focus: "Flask App Development", modules: "App Setup", topics: ["Routes", "Templates", "Model Integration"], hours: 3.5, phase: 3 },
  { week: 11, dates: "Mar 10-16", focus: "UI & Testing", modules: "Frontend + Tests", topics: ["Bootstrap UI", "Validation", "Error Handling"], hours: 3.5, phase: 3 },
  { week: 12, dates: "Mar 17-23", focus: "Deployment", modules: "Render.com", topics: ["Environment", "Production Build", "Domain"], hours: 3.5, phase: 3 },
  { week: 13, dates: "Mar 24-31", focus: "Polish & Showcase", modules: "Final Touches", topics: ["Video Demo", "Portfolio", "Documentation"], hours: 4.0, phase: 3 }
];

// Phase metadata
const phasesMeta = [
  { id: 1, month: "January", title: "ML Foundations", color: "blue", course: "Course 1: Supervised ML", deliverables: ["Course 1 Certificate", "Weekly Notes", "Environment Setup"] },
  { id: 2, month: "February", title: "Hands-On ML", color: "green", course: "Applied ML Projects", deliverables: ["4 Completed Notebooks", "Trained Models (.pkl)", "Visualizations"] },
  { id: 3, month: "March", title: "Integration & Deployment", color: "purple", course: "Productization", deliverables: ["Live Web App", "Video Demo", "Updated Portfolio"] }
];

// Merge DB progress with phase metadata
const phases = phasesMeta.map(meta => {
  const dbPhase = dbPhases.find(p => p.month === meta.month);
  return {
    ...meta,
    progress: dbPhase?.progress ?? 0
  };
});

// Merge DB completion status with weekly plan
const weeks = weeklyPlan.map(week => {
  const dbWeek = dbWeeks.find(w => w.week_number === week.week);
  return {
    ...week,
    completed: dbWeek?.completed ?? false,
    points_earned: dbWeek?.points_earned ?? 0
  };
});

// Use DB badges or fallback
const badges = dbBadges.length > 0 ? dbBadges : [
  { name: "Foundation Builder", icon: "üéì", requirement: "Complete January", unlocked: false },
  { name: "First Model", icon: "üìä", requirement: "Train first ML model", unlocked: false },
  { name: "Accuracy Ace", icon: "üéØ", requirement: "Achieve >80% accuracy", unlocked: false },
  { name: "Cluster Commander", icon: "üß©", requirement: "Complete clustering", unlocked: false },
  { name: "Ensemble Expert", icon: "üå≥", requirement: "Compare 3+ models", unlocked: false },
  { name: "Shipper", icon: "üöÄ", requirement: "Deploy Flask app", unlocked: false },
  { name: "Week Warrior", icon: "üî•", requirement: "7-day streak", unlocked: false },
  { name: "Quarter Champion", icon: "üèÜ", requirement: "Complete all Q1 goals", unlocked: false }
];
---

<Layout title="Q1 2026 Goals" description="AI/PM Upskilling Portfolio - Q1 2026 Learning Goals and Progress">

  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-br from-blue-600 to-purple-700 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Q1 2026 Goals</h1>
      <p class="text-xl text-blue-100 mb-8">AI/PM Upskilling Portfolio - Machine Learning Journey</p>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-8">
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <div class="text-3xl font-bold">{stats.currentStreak}</div>
          <div class="text-blue-200 text-sm">Day Streak</div>
        </div>
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <div class="text-3xl font-bold">{stats.totalPoints}</div>
          <div class="text-blue-200 text-sm">Points</div>
        </div>
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <div class="text-3xl font-bold">{stats.dailyCommitment}</div>
          <div class="text-blue-200 text-sm">Daily</div>
        </div>
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <div class="text-3xl font-bold">{stats.overallProgress}%</div>
          <div class="text-blue-200 text-sm">Complete</div>
        </div>
      </div>

      <!-- Admin Link -->
      <div class="mt-6">
        <a href="/admin" class="text-blue-200 hover:text-white text-sm underline">Admin</a>
      </div>
    </div>
  </section>

  <!-- Progress Overview -->
  <section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-800 mb-6">Progress Overview</h2>

      <div class="space-y-4">
        {phases.map(phase => (
          <div class="bg-slate-50 rounded-xl p-4">
            <div class="flex justify-between items-center mb-2">
              <div class="flex items-center gap-3">
                <span class={`w-3 h-3 rounded-full ${phase.color === 'blue' ? 'bg-blue-500' : phase.color === 'green' ? 'bg-green-500' : 'bg-purple-500'}`}></span>
                <span class="font-semibold text-slate-800">{phase.month}: {phase.title}</span>
              </div>
              <span class="text-slate-500 text-sm">{phase.progress}%</span>
            </div>
            <div class="w-full bg-slate-200 rounded-full h-2">
              <div class={`h-2 rounded-full transition-all duration-500 ${phase.color === 'blue' ? 'bg-blue-500' : phase.color === 'green' ? 'bg-green-500' : 'bg-purple-500'}`} style={`width: ${phase.progress}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Detailed Weekly Plan -->
  <section class="py-12 bg-slate-100">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-800 mb-8">Weekly Learning Plan</h2>

      {phases.map(phase => (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <div class={`w-4 h-4 rounded-full ${phase.color === 'blue' ? 'bg-blue-500' : phase.color === 'green' ? 'bg-green-500' : 'bg-purple-500'}`}></div>
            <h3 class="text-xl font-bold text-slate-800">{phase.month} - {phase.title}</h3>
            <span class="text-slate-500 text-sm">({phase.course})</span>
          </div>

          <div class="grid gap-4">
            {weeks.filter(w => w.phase === phase.id).map(week => (
              <div class={`bg-white rounded-xl p-5 shadow-sm border ${week.completed ? 'border-green-400 bg-green-50' : 'border-slate-200'}`}>
                <div class="flex flex-wrap justify-between items-start gap-4 mb-3">
                  <div>
                    <div class="flex items-center gap-2">
                      {week.completed ? (
                        <span class="bg-green-100 text-green-700 text-xs font-medium px-2 py-1 rounded flex items-center gap-1">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                          Week {week.week}
                        </span>
                      ) : (
                        <span class="bg-slate-100 text-slate-600 text-xs font-medium px-2 py-1 rounded">Week {week.week}</span>
                      )}
                      <span class="text-slate-500 text-sm">{week.dates}</span>
                    </div>
                    <h4 class="font-semibold text-slate-800 mt-2">{week.focus}</h4>
                  </div>
                  <div class="text-right">
                    <div class="text-sm text-slate-500">30 min/day</div>
                    <div class="text-xs text-slate-400">{week.hours} hrs total</div>
                    {week.points_earned > 0 && (
                      <div class="text-xs text-green-600 font-medium mt-1">+{week.points_earned} pts</div>
                    )}
                  </div>
                </div>

                <div class="mb-3">
                  <span class="text-xs font-medium text-slate-500 uppercase">Modules:</span>
                  <span class="text-sm text-slate-700 ml-2">{week.modules}</span>
                </div>

                <div class="flex flex-wrap gap-2">
                  {week.topics.map(topic => (
                    <span class={`text-xs px-2 py-1 rounded-full ${phase.color === 'blue' ? 'bg-blue-100 text-blue-700' : phase.color === 'green' ? 'bg-green-100 text-green-700' : 'bg-purple-100 text-purple-700'}`}>
                      {topic}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>

          <!-- Phase Deliverables -->
          <div class="mt-4 bg-white rounded-xl p-4 border border-slate-200">
            <span class="text-xs font-medium text-slate-500 uppercase">Deliverables:</span>
            <div class="flex flex-wrap gap-2 mt-2">
              {phase.deliverables.map(item => (
                <span class="text-sm bg-slate-100 text-slate-700 px-3 py-1 rounded-full">{item}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Achievements -->
  <section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-800 mb-6">Achievements</h2>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {badges.map(badge => (
          <div class={`rounded-xl p-4 text-center transition-all ${badge.unlocked ? 'bg-yellow-50 border-2 border-yellow-400 shadow-lg' : 'bg-slate-100 border border-slate-200'}`}>
            <div class={`text-3xl mb-2 ${badge.unlocked ? '' : 'grayscale opacity-30'}`}>{badge.icon}</div>
            <div class="font-medium text-slate-800 text-sm">{badge.name}</div>
            <div class="text-xs text-slate-500 mt-1">{badge.requirement}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Resources -->
  <section class="py-12 bg-slate-100">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-800 mb-6">Resources</h2>

      <div class="grid md:grid-cols-2 gap-4">
        <a href="https://www.coursera.org/specializations/machine-learning-introduction" target="_blank" rel="noopener" class="bg-white rounded-xl p-5 shadow-sm border border-slate-200 hover:border-blue-300 transition-colors">
          <div class="font-semibold text-slate-800">ML Specialization</div>
          <div class="text-sm text-slate-500">Andrew Ng - Coursera</div>
        </a>
        <a href="https://github.com/Blkbrd77/ai-pm-upskilling-2026" target="_blank" rel="noopener" class="bg-white rounded-xl p-5 shadow-sm border border-slate-200 hover:border-blue-300 transition-colors">
          <div class="font-semibold text-slate-800">Progress Repository</div>
          <div class="text-sm text-slate-500">GitHub - Daily Updates</div>
        </a>
      </div>
    </div>
  </section>

</Layout>
